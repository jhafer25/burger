<div class="jumbotron">
	<div class="row text-center">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<img src="burgerHeader.png" class="mx-auto d-block">
		</div>
	</div>
	<div class="row text-center">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h2>Add Your Favorite Burger!</h2>
		</div>
	</div>
	<div class="marketing form text-center">
		<div class="row text-center">
			<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3"></div>
			<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
    			<form action="/burgers" method="POST">
	      			<input type="text" id="burger_name" name="burger_name" class="form-control" placeholder="Tasty Burger">
	      			<button type="submit" class="btn btn-primary add-burger">Add Your Burger</button>
	      		</form>
	    	</div>
	  	</div>
	</div>
	
</div>
<div class="container">
	<div class="row text-center">
  		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
  			<h3>Help Devour These Burgers</h3>
    		{{#each burgers}}
      		{{#unless this.devoured}}
        <div>
          	<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class="btn btn-success burgerAvailable"> {{this.burger_name}}</button>
          	</form>
        </div>
          	{{/unless}}
        	{{/each}}
      	</div>
		
      	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      		<h3>All the Devoured Burgers</h3>
        	{{#each burgers}}
          	{{#if this.devoured}}
            <div class='burgerEaten'>
      			<div>
                	{{this.burger_name}}
              	</div>
            </div>
          	{{/if}}
        	{{/each}}
      	</div>
	</div>
</div>
<footer>
	<div class="container">
		<a href="https://github.com/jhafer25/burger.github.io" target="_blank">Repo</a>
	</div>
